#!/bin/sh

# A mymenu wrapper script for system functions.

# For non-systemd init systems.
case "$(readlink -f /sbin/init)" in
	*runit*) hib="sudo -A zzz" ;;
	*openrc*) reb="sudo -A openrc-shutdown -r"; shut="sudo -A openrc-shutdown -p" ;;
esac

cmds="\
ðŸ”’ lock		slock
ðŸšª leave dwm	kill -TERM $(pgrep -u "$USER" "\bdwm$")
â™»  renew dwm	kill -HUP $(pgrep -u "$USER" "\bdwm$")
ðŸ”ƒ reboot	reboot
ðŸ–¥ shutdown	shutdown now
ðŸ•’ timer shut	schedshut"
choice="$(echo "$cmds" | cut -d'	' -f 1 | mymenu -l 10)" || exit 1
#choice="$(echo "$cmds" | cut -d'	' -f 1 | bemenu -l 10)" || exit 1

`echo "$cmds" | grep "^$choice	" | cut -d '	' -f2-`
