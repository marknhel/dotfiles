#!/bin/sh

docloc="$HOME/documents/copied"

[ ! -d "$docloc" ] && mkdir -p "$docloc"

[ -f "$1" ] && ( ( notify-send "Copying $1 ğŸ¤­ " && cp "$1" "$docloc" && notify-send "$1 copied successfully ğŸ˜ " && exit 0 ) || ( notify-send "Failed to copy $1 ğŸ˜¥ " && exit 1) ) &
[ -d "$1" ] && ( ( notify-send "Copying $1 ğŸ¤­ " && cp -r "$1" "$docloc" && notify-send "$1 copied successfully ğŸ˜  " && exit 0 ) || ( notify-send "Failed to copy $1 ğŸ˜¥ " && exit 1 )) &
