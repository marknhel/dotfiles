#!/bin/sh

othloc="$XDG_OTHERS_DIR/copied"

[ ! -d "$othloc" ] && mkdir -p "$othloc"



[ -f "$1" ] && ( ( notify-send --urgency=normal "Copying" "Copying $1 ğŸ¤­ " && cp "$1" "$othloc" && notify-send --urgency=low "Successful" "$1 copied successfully ğŸ˜  " && exit 0 ) || ( notify-send --urgency=critical "Failed" "Failed to copy $1 ğŸ˜¥ " && exit 1 ))

[ -d "$1" ] && ( ( notify-send --urgency=normal "Copying" "Copying $1 ğŸ¤­ " && cp -r "$1" "$othloc" && notify-send --urgency=low "Successful" "$1 copied successfully ğŸ˜  " && exit 0 ) || ( notify-send --urgency=critical "Failed" "Failed to copy $1 ğŸ˜¥ " && exit 1 ))
