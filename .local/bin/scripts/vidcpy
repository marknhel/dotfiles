#!/bin/sh

vidloc="$XDG_VIDEOS_DIR/copied"
[ ! -d "$vidloc" ] && mkdir -p "$vidloc"

#[ -f "$1" ] && ( ( notify-send --urgency=normal "Copying" "Copying $1 ğŸ¤­ " && cp "$1" "$vidloc" && notify-send --urgency=low "Successful" " $1 copied successfully ğŸ˜  " && exit 0) || ( notify-send --urgency=critical "Failed" "Failed to copy $1 ğŸ˜¥ " && exit 1 ) )

#[ -d "$1" ] && ( ( notify-send --urgency=normal "Copying" "Copying $1 ğŸ¤­ " && cp -Ru "$1" "$vidloc" && notify-send --urgency=low "Successful" " $1 copied successfully ğŸ˜  " && exit 0) || ( notify-send --urgency=critical "Failed" "Failed to copy $1 ğŸ˜¥ " && exit 1 ) )

notify-send --urgency=normal "Copying" "Copying $1 ğŸ¤­ " && rsync -a "$1" "$vidloc" && notify-send --urgency=low "Successful" " $1 copied successfully ğŸ˜  " || notify-send --urgency=critical "Failed" "Failed to copy $1 ğŸ˜¥ "
