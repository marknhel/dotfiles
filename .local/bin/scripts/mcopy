#!/bin/sh

srcloc="$( readlink -f "$2")"
echo "$srcloc\n\n"
option="$1"
echo "$1"
cpy(){

[ -z "$destloc" ] && mkdir -p "$destloc"

 ( notify-send --urgency=normal "Copying" "Copying $srcloc ü§≠ " && rsync -a "$srcloc" "$destloc" && notify-send --urgency=low "Successful" "$srcloc copied successfully üòÅ  " && exit 0 ) || ( notify-send --urgency=critical "Failed" "Failed to copy $srcloc üò• " && exit 1 )

}

case "$option" in
	"-f") destloc="$(lsblk | awk '{ print $7 }' | sed "/^$/ d" | sort -R | fzf )"
		[ -z "$destloc" ] && exit 1
		destloc="$destloc/copied"
		cpy;;
	"-m") destloc="/home/malware/music/copied"
		cpy;;
	"-d") destloc="/home/malware/docs/copied"
		cpy;;
	"-o") destloc="/home/malware/others/copied"
		cpy;;
	"-v") destloc="/home/malware/vids/copied"
		cpy;;
	"-p") destloc="/home/malware/pics/copied"
		cpy;;
	*) exit 1;;
esac
