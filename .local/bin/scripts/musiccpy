#!/bin/sh

musicloc="$XDG_MUSIC_DIR/copied"

[ ! -d "$musicloc" ] && mkdir -p "$musicloc"


[ -f "$1" ] && ( ( notify-send --urgency=normal "Copying" "Copying $1 ğŸ¤­ " && cp "$1" "$musicloc" && notify-send --urgency=low "Successful" "$1 copied successfully ğŸ˜  " && exit 0 ) || ( notify-send --urgency=critical "Failed" "Failed to copy $1 ğŸ˜¥ " && exit 1 ))

[ -d "$1" ] && ( ( notify-send --urgency=normal "Copying" "Copying $1 ğŸ¤­ " && cp -r "$1" "$musicloc" && notify-send --urgency=low "Successful" "$1 copied successfully ğŸ˜  " && exit 0 ) || ( notify-send --urgency=critical "Failed" "Failed to copy $1 ğŸ˜¥ " && exit 1 ))
