#!/bin/sh

musicloc="$HOME/music/copied/"

[ ! -d "$musicloc" ] && mkdir -p "$musicloc"

[ -f "$1" ] && ( ( notify-send "Copying $1 ğŸ¤­" && cp "$1" "$musicloc" && notify-send "$1 copied successfully ğŸ˜" && exit 0 ) || (notify-send "Failed to copy $1 ğŸ˜¥" && exit 1 ) )

[ -d "$1" ] && ( ( notify-send "Copying $1 ğŸ¤­" && cp -r "$1" "$musicloc" && notify-send "$1 copied successfully ğŸ˜" && exit 0 ) || (notify-send "Failed to copy $1 ğŸ˜¥" && exit 1 ) )
