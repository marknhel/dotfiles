#!/bin/sh

picloc="$XDG_PICTURES_DIR/copied"
[ ! -d "$picloc" ] && mkdir -p "$picloc"


[ -f "$1" ] && ( ( notify-send --urgency=normal "Copying" "Copying $1 ğŸ¤­ " && cp "$1" "$picloc" && notify-send --urgency=low "Successful" "$1 copied successfully ğŸ˜  " && exit 0 ) || ( notify-send --urgency=critical "Failed" "Failed to copy $1 ğŸ˜¥ " && exit 1 ))

[ -d "$1" ] && ( ( notify-send --urgency=normal "Copying" "Copying $1 ğŸ¤­ " && cp -r "$1" "$picloc" && notify-send --urgency=low "Successful" "$1 copied successfully ğŸ˜  " && exit 0 ) || ( notify-send --urgency=critical "Failed" "Failed to copy $1 ğŸ˜¥ " && exit 1 ))
