#!/bin/sh

picloc="$HOME/pictures/copied"
[ ! -d "$picloc" ] && mkdir -p "$picloc"

 [ -f "$1" ] &&  ( ( notify-send "Copying $1 ğŸ¤­" && cp "$1" "$picloc"  && notify-send " File $1 copied successfuly ğŸ˜ " && exit 0)  || ( notify-send "File Failed to copy $1 ğŸ˜¥ " && exit 1 ) )

[ -d "$1" ] && ( ( notify-send "Copying $1 ğŸ¤­ " && cp -r "$1" "$picloc" && notify-send " Folder $1 copied successfuly ğŸ˜ " ) || ( notify-send "Folder Failed to copy $1 ğŸ˜¥ " && exit 1 ))
