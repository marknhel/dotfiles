#!/bin/sh

loc="$( lsblk | grep "$XDG_MOUNTPOINT_DIR" | awk '{ print $7 }' | fzf )"
[ -z "$loc" ] && exit 1
cploc="$loc/copied"
[ -d "$loc" ] || mkdir -p "$loc"



( notify-send --urgency=normal "Copying" "Copying $1 ğŸ¤­ " && cp -Ru "$1" "$cploc" && notify-send --urgency=low "Successful" "$1 copied successfully ğŸ˜" && exit 0 ) || (notify-send "Failed to copy $1 ğŸ˜¥" && exit 1 )
