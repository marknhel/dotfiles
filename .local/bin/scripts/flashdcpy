#!/bin/sh

loc="$( lsblk | grep /home/malware/mnt | awk '{ print $7 }' | fzf )"
[ -z "$loc" ] && exit 1
cploc="$loc/copied"

[ -f "$1" ] && ( ( notify-send "Copying $1 ğŸ¤­" && cp "$1" "$cploc" && notify-send "$1 copied successfully ğŸ˜" && exit 0 ) || (notify-send "Failed to copy $1 ğŸ˜¥" && exit 1 ) )

[ -d "$1" ] && ( ( notify-send "Copying $1 ğŸ¤­" && cp -r "$1" "$cploc" && notify-send "$1 copied successfully ğŸ˜" && exit 0 ) || (notify-send "Failed to copy $1 ğŸ˜¥" && exit 1 ) )
