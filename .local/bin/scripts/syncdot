#!/bin/sh
#copy for dotfiles

#HOME dot
cp -Ruv "$HOME/.xprofile" "$HOME/git/dotfiles"

#.config

des="$HOME/git/repos/dotfiles/.config"
loc="$HOME/.config"

cp -Ruv "$loc/dunst" "$des"
cp -Ruv "$loc/flameshot" "$des"
cp -Ruv "$loc/gtk-2.0" "$des"
cp -Ruv "$loc/gtk-3.0" "$des"
cp -Ruv "$loc/lf" "$des"
cp -Ruv "$loc/mpd" "$des"
cp -Ruv "$loc/nvim" "$des"
cp -Ruv "$loc/X11" "$des"
cp -Ruv "$loc/youtube-dl" "$des"
cp -Ruv "$loc/youtube-viewer" "$des"
cp -Ruv "$loc/zsh" "$des"
cp -Ruv "$loc/pulse" "$des"
cp -Ruv "$loc/vlc" "$des"

rm -rfv "$des/nvim/autoload"
rm -rfv "$des/nvim/plugged"

#.local cp
bsrc="$HOME/.local/bin"
bdes="$HOME/git/repos/dotfiles/.local/bin"

cp -Ruv "$bsrc/scripts" "$bdes"
cp -Ruv "$bsrc/statusbar" "$bdes"
